<p id="notice"><%= notice %></p>

<h1>License Types</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Url</th>
      <th>Liquor</th>
      <th>Wine</th>
      <th>Heavy Beer</th>
      <th>Beer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @license_types.each do |license_type| %>
      <tr>
        <td><%= license_type.name %></td>
        <td><%= license_type.code %></td>

        <td><%= link_to license_type.name, license_type.url, target: '_blank' %></td>
        <%= license_symbol(license_type.liquor) %>
        <%= license_symbol(license_type.wine) %>
        <%= license_symbol(license_type.heavy_beer) %>
        <%= license_symbol(license_type.beer) %>
        <td><%= link_to 'Show', license_type, class: 'btn btn-sm btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_license_type_path(license_type), class: 'btn btn-sm btn-outline-warning'%></td>
        <td><%= link_to 'Destroy', license_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New License Type', new_license_type_path, class: 'btn btn-outline-primary mb-5' %>


