<p id="notice"><%= notice %></p>
<h1>Locations</h1>
<div class="row align-items-start">
  <div class="col">
    <%= link_to 'New Location', new_location_path, class: 'btn btn-sm btn-outline-primary' %>

  </div>
  <div class="col">
    <%= search_form_for @q do |f| %>
      <%= f.label :name_cont %>
      <%= f.search_field :name_cont %>

      <%= f.submit %>
    <% end %>
  </div>

</div>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>License type</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Url</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location %></td>
        <td><%= link_to location.license_type.name, location.license_type%></td>
        <td><%= location.street_address %></td>
        <td><%= location.phone %></td>
        <td><%= location.url %></td>
        <td><%= location.description %></td>
        <td><%= link_to 'Show', location, class: 'btn btn-sm btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_location_path(location), class: 'btn btn-sm btn-outline-warning' %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%== pagy_nav(@pagy) %>
<br>


